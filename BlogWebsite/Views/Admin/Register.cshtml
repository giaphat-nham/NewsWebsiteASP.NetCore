@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Tạo tài khoản mới";
}

@model NewsWebsite.ViewModels.RegisterVM

<form asp-action="Register" class="w-75" style="margin-inline: auto">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="Username" class="form-label"></label><sup class="text-danger">*</sup>
        <input asp-for="Username" class="form-control" aria-describedby="textHelp">
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label><sup class="text-danger">*</sup>
        <input asp-for="Email" class="form-control" aria-describedby="emailHelp">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-4">
        <label asp-for="Password" class="form-label"></label><sup class="text-danger">*</sup>
        <input asp-for="Password" class="form-control">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="mb-4">
        <label asp-for="DisplayName" class="form-label"></label><sup class="text-danger">*</sup>
        <input asp-for="DisplayName" class="form-control">
        <span asp-validation-for="DisplayName" class="text-danger"></span>
    </div>
    <div class="form-group mb-4">
        <label asp-for="RoleId" class="control-label"></label><sup class="text-danger">*</sup>
        <select asp-for="RoleId" class="form-control" asp-items="ViewBag.RoleId"></select>
    </div>
    <button type="submit" class="btn btn-primary w-100 py-8 fs-4 mb-4">Tạo tài khoản</button>
</form>
