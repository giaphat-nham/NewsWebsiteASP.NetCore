@model NewsWebsite.Models.Article;


<div class="position-relative overflow-hidden rounded">
    <a asp-controller="Articles" asp-action="Details" asp-route-id=@Model.Id>
    <img src="~/img/articles/@Model.Thumbnail" class="img-fluid rounded img-zoomin w-100" alt="" style="aspect-ratio: 5 / 4; object-fit: cover">
    <div class="d-flex justify-content-center px-4 position-absolute flex-wrap" style="bottom: 10px; left: 0;">
        <div class="text-white me-3 link-hover"><i class="fa fa-eye"></i> @Model.Views Lượt xem</div>
        <div class="text-white me-3 link-hover"><i class="fas fa-at"></i> @Model.Account.DisplayName</div>
        <div class="text-white me-3 link-hover"><i class="fas fa-calendar-alt"></i> @Model.Date.ToString("dd/MM/yyyy")</div>
    </div>
    </a>
</div>
<div class="border-bottom py-3">
    <a asp-controller="Articles" asp-action="Details" asp-route-id=@Model.Id class="display-5 text-dark mb-0 link-hover text-ellipsis-2">@Model.Title</a>
</div>
<p class="mt-3 mb-4 text-ellipsis-3">
    @Model.Description
</p>