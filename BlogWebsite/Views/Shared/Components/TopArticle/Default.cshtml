@model NewsWebsite.Models.Article;

<div class="row g-4 align-items-center">
    <div class="col-md-6">
        <div class="rounded overflow-hidden">
            <a asp-controller="Articles" asp-action="Details" asp-route-id=@Model.Id><img src="~/img/articles/@Model.Thumbnail" class="img-fluid rounded img-zoomin w-100" alt="" style="aspect-ratio: 3 / 2; object-fit: cover"></a>
        </div>
    </div>
    <div class="col-md-6">
        <div class="d-flex flex-column">
            <a asp-controller="Articles" asp-action="Details" asp-route-id=@Model.Id class="h3 text-ellipsis-3">@Model.Title</a>
            <p class="mb-0 fs-5"><i class="fas fa-calendar-alt"></i>  @Model.Date.ToString("dd/MM/yyyy")</p>
            <p class="mb-0 fs-5"><i class="fa fa-eye"></i> @Model.Views Lượt xem</p>
        </div>
    </div>
</div>