@model IEnumerable<NewsWebsite.ViewModels.RecommendedArticleVM>

@foreach (var article in Model)
{
    <div class="col-lg-6">
        <div class="d-flex align-items-center p-3 bg-white rounded">
            <img src="~/img/articles/@article.Thumbnail" class="img-fluid rounded" alt="article thumbail" style="aspect-ratio: 1 / 1; object-fit: cover; width: 100px">
            <div class="ms-3">
                <a asp-controller="Articles" asp-action="Details" asp-route-itemid=@article.Id class="h5 mb-2 text-ellipsis-3">@article.Title</a>
                <p class="text-dark mt-3 mb-0 me-3"><i class="fa fa-eye"></i> @article.Views Lượt xem</p>
            </div>
        </div>
    </div>
}