@model NewsWebsite.ViewModels.AccountChangePassVM;
@{
    ViewData["title"] = "Đổi mật khẩu";
    Layout = "_LayoutAdmin";
}

<div class="row">
    <div class="col-md-8">
        <form asp-action="ChangePassword" asp-route-returnUrl="@ViewBag.ReturnUrl">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="my-3">
                <label asp-for="CurrentPassword" class="form-label"></label>
                <input asp-for="CurrentPassword" class="form-control">
                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
            </div>
            <div class="mb-4">
                <label asp-for="NewPassword" class="form-label"></label>
                <input asp-for="NewPassword" class="form-control">
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-danger w-100 py-8 fs-4 my-4">Xác nhận</button>
            <a class="btn btn-outline-primary" asp-controller="Accounts" asp-action="Personal">Quay lại</a>
        </form>
    </div>
</div>
