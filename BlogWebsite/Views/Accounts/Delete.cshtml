@model NewsWebsite.ViewModels.AccountDeleteVM

@{
    ViewData["Title"] = Model.IsDeleted ? "Mở khóa tài khoản" : "Khóa tài khoản";
    Layout = "_LayoutAdmin";
}

@if (Model.IsDeleted)
{
    <h1>Mở khóa</h1>
}
else
{
    <h1>Khóa</h1>
}

@if (Model.IsDeleted)
{
    <h3>Bạn chắc chắn muốn mở khóa tài khoản này?</h3>
}
else
{
    <h3>Bạn chắc chắn muốn khóa tài khoản này?</h3>
}
<div>
    <hr />

    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Thông tin tài khoản</h5>
                <table class="table align-middle mb-4" style="max-width: 100%">
                    <tbody>
                        <tr>
                            <th scope="row">Mã tài khoản</th>
                            <td>@Model.Id</td>
                        </tr>
                        <tr>
                            <th scope="row">Tên đăng nhập</th>
                            <td>@Model.Username</td>
                        </tr>
                        <tr>
                            <th scope="row">Tên hiển thị</th>
                            <td>@Model.DisplayName</td>
                        </tr>
                        <tr>
                            <th scope="row">Vai trò</th>
                            <td>@Model.Role</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        @if (Model.IsDeleted)
        {
            <input type="submit" value="Mở khóa tài khoản" class="btn btn-danger my-3" />
        }
        else
        {
            <input type="submit" value="Khóa tài khoản" class="btn btn-danger my-3" />
        }
        |
        <a class="btn btn-outline-primary" asp-action="Index">Quay về danh sách</a>
    </form>
</div>
